CC = g++
CFLAGS = -c -g -Wall -Werror
LFLAGS = -o
INC = inc
SRC = src
OBJ = obj
BIN = bin
IFLAGS = -I$(INC)/

all: app

app: $(OBJ)/asgn10a.o
	$(CC) $(LFLAGS) $(BIN)/app $(OBJ)/asgn10a.o


$(OBJ)/asgn10a.o: $(SRC)/asgn10a.cpp
	$(CC) $(CFLAGS) $(SRC)/asgn10a.cpp $(IFLAGS)
	mv *.o $(OBJ)/


clean:
	rm -f a.out app
	rm -f $(OBJ)/*.o
	rm -f $(BIN)/app
	@echo "Cleaning Done!"
